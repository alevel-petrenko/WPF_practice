<Window x:Class="SortingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="ListBox">
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="Width" Value="Auto"></Setter>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="14"></Setter>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="2" Margin="10,50,0,200" Text="Please choose the type of sorting:"/>
        <RadioButton Content="Insertion Sort" Grid.Column="2" Margin="60,110,91,147"/>
        <CheckBox Content="Quick Sort" Grid.Column="2" HorizontalAlignment="Left" Margin="60,150,0,0"/>
        <CheckBox Content="Selection Sort" Grid.Column="2" Margin="60,190,0,0"/>
        
        <ListBox HorizontalAlignment="Left" Height="219" Margin="10,50,0,0" VerticalAlignment="Top" Width="244"/>
        <ListBox Grid.Column="1" HorizontalAlignment="Left" Height="219" Margin="10,50,0,0" VerticalAlignment="Top" Width="244"/>
        <TextBlock Grid.Column="1" Margin="10,10,10,240" Text="Output array:"/>
        <TextBlock Margin="10,10,10,240" Text="Input array"/>
    </Grid>
</Window>
