<Window x:Class="QueueImplementation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Queue window" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="25"/>
        </Grid.ColumnDefinitions>

        <Button Content="Add" Grid.Column="1" Grid.Row="1" Width="100" Height="50"
                HorizontalAlignment="Left" Command="{Binding Add}"/>
        <Button Content="Show" Grid.Column="1" Grid.Row="1" Width="100" Height="50"
                HorizontalAlignment="Center" Command="{Binding Add}"/>
        <Button Content="Remove" Grid.Column="1" Grid.Row="1" Width="100" Height="50"
                HorizontalAlignment="Right" Command="{Binding Add}"/>

        <DataGrid Grid.Row="0" Grid.Column="2" Grid.RowSpan="3" Margin="50"
                  ItemsSource="{Binding AllNumbers}"/>

    </Grid>
</Window>